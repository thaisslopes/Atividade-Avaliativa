/*Faça um programa que solicite um número inteiro positivo e imprima todas as
 * tabuadas até aquele número.*/

#include <stdio.h>

int main(void) {
  int n, i, cont = 0;
  printf("Digite um número: ");
  scanf("%d", &n);
  for (i = 1; i <= n;
       i++) { // realiza a multiplicação de todos os números até o informado
    printf("\n%d * 1 = %d", i, i * 1);
    printf("\n%d * 2 = %d", i, i * 2);
    printf("\n%d * 3 = %d", i, i * 3);
    printf("\n%d * 4 = %d", i, i * 4);
    printf("\n%d * 5 = %d", i, i * 5);
    printf("\n%d * 6 = %d", i, i * 6);
    printf("\n%d * 7 = %d", i, i * 7);
    printf("\n%d * 8 = %d", i, i * 8);
    printf("\n%d * 9 = %d", i, i * 9);
    printf("\n%d * 10 = %d\n", i, i * 10);
  }
  return 0;
}
